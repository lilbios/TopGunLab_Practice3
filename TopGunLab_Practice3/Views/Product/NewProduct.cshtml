@model TopGunLab_Practice3.Models.Product

@{
    ViewBag.Title = "NewProduct";
}

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Are you sure to create product? </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Choose the below option to confirm your choice
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="btn-close"data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary"  id="request">Confirm</button>
            </div>
        </div>
    </div>
</div>

<div class="container">
    @using (Html.BeginForm("NewProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row ">
            <div class="col-sm-3" align="center">
                <div class="error-msg">

                </div>
                <img class="img" src="~/Content/Images/default/default_prod.png">

                <label id="profile-image">
                    <input type="file" class="loader" name="loader" onchange="imgload(this)" />
                    <small>Upload</small>
                    <small>
                        <i class="fa fa-camera" aria-hidden="true"></i>
                    </small>
                </label>

            </div>
            <div class="col-sm-9">
                <div class="col-sm-4">
                    <div class="form-group block">
                        <label>Product name</label>
                        <div class="col">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "inp-box" } })
                            <br />
                            <small class="danger">
                                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                            </small>
                        </div>
                    </div>
                    <div class="form-group block">
                        <label>Count</label>
                        <div class="col">
                            @Html.EditorFor(model => model.Count, new { htmlAttributes = new { @min = "1", @max = "100", @class = "inp-box " } })
                            <br />
                            <small class="danger">
                                @Html.ValidationMessageFor(model => model.Count, "", new { @class = "text-danger" })
                            </small>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group block">
                        <label>Price</label>
                        <div class="col">
                            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "inp-box" } })
                            <br />
                            <small class="danger">
                                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                            </small>
                        </div>
                    </div>
                    <div class="form-group block ">
                        <label>Date of expiry</label>
                        <div class="col">
                            @Html.EditorFor(model => model.ExcpiryDate, new { htmlAttributes = new { @type = "date", @class = "inp-box" } })
                            <br />
                            <small class="danger">
                                @Html.ValidationMessageFor(model => model.ExcpiryDate, "", new { @class = "text-danger" })
                            </small>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group block">
                        <fieldset>
                            <legend>Measure</legend>
                            <div class="flex-colum">
                                @Html.RadioButtonFor(model => model.Measure, "Liter")
                                <small>Liters</small>
                                <br />
                                @Html.RadioButtonFor(model => model.Measure, "Gram")
                                <small>Grams</small>
                                <br />
                                @Html.RadioButtonFor(model => model.Measure, "Piece")
                                <small>Pieces</small>
                                <br />
                                <small class="danger">
                                    @Html.ValidationMessageFor(model => model.ExcpiryDate, "", new { @class = "text-danger" })
                                </small>
                            </div>
                        </fieldset>

                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 block">
                        <label>Description(Manufacter,product contents etc)</label>
                        <div class="w-100"></div>
                        @Html.TextAreaFor(model => model.Description,  new { @class = "description" })
                        <br />
                        <small class="danger">
                            @Html.ValidationMessageFor(model => model.ExcpiryDate, "", new { @class = "text-danger" })
                        </small>
                    </div>

                </div>
            </div>

            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                Finish
            </button>
            <input type="submit" class="ninja">
        </div>
    }
</div>