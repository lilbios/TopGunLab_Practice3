@model List<TopGunLab_Practice3.Models.Product>
@{
    ViewBag.Title = "Index";
}


<div class="row">
    <div class="col-9">
        <div class="search-block" align="center">
            @using (Ajax.BeginForm("ProductSearch", new AjaxOptions { UpdateTargetId = "products" }))
            {
                <input type="text" name="param" class="default-box srch-box" />
                <input type="submit" class="srch-btn" value="🔍">
            }
        </div>
        <div id="products" class="m-5">
            @if (Model.Count > 0)
            {
                @Html.Partial("_Products", Model);
            }
            else
            {

                <div class="empty" align="center">
                    <p>There is not products yet...</p>
                </div>
            }

        </div>
    </div>
    <div class="col-3" style="background-color:black">

    </div>
</div>

